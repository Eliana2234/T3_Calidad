<div class="container">
    <main role="main" class="pb-3">
        <br />
        <br />
        <br />
        <div class="card">
            <div class="card-body">
                <form action="/auth/login" class="col-12" method="post">

                    <span id="inCorrecto">@Html.ValidationMessage("Login")</span>

                    <label>Username</label>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Nombre de Usuario" name="UserName" />
                    </div>

                    <label>Contraseña</label>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña" />
                    </div>

                    <button class="btn btn-primary float-left">Login</button>
                </form>
                <div class="col-12 forgot">
                    <a class="btn btn-dark float-right" href="/auth/registrar">Registrarse</a>
                </div>
            </div>
        </div>
    </main>
</div>
