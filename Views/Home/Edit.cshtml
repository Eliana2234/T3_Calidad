@{ Layout = null;
    var nota = (Nota)Model;}


<form id="editNota" onsubmit="editar(event)" action="/Home/Edit" enctype="multipart/form-data" method="post">

    <input id="mtxtId" type="hidden" name="Id" />

    <div class="form-group">
        <label><strong>Titulo</strong></label>
        <input id="mtxtTitulo" type="text" class="form-control" name="Titulo" placeholder="Titulo" />
        @Html.ValidationMessage("Titulo")
    </div>


    <div class="form-group">
        <label><strong>Contenido</strong></label>
    </div>
    <textarea id="mtxtCuerpo" rows="5" cols="60" name="Cuerpo"></textarea>
    <br />
    @Html.ValidationMessage("Cuerpo")

    <div class="form-group">
        <label>Etiquetas</label>
        @foreach (var item in ViewBag.Etiquetas)
        {
            <div class="form-check form-check">
                <input name="etiqueta" class="form-check-input" type="checkbox" id="inlineCheckbox1" value="@item.Id">
                <label class="form-check-label" for="inlineCheckbox1">@item.Nombre</label>
            </div>
        }
        @Html.ValidationMessage("etiqueta")
    </div>
</form>

